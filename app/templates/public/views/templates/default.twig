{% block document %}
  {% block html %}
    <!DOCTYPE html>
    <!--[if lt IE 7]>  <html lang="fr-FR" class="no-js lang-fr oldie ie6"> <![endif]-->
    <!--[if IE 7]>   <html lang="fr-FR" class="no-js lang-fr oldie ie7"> <![endif]-->
    <!--[if IE 8]>   <html lang="fr-FR" class="no-js lang-fr oldie ie8"> <![endif]-->
    <!--[if IE 9]>   <html lang="fr-FR" class="no-js lang-fr ie9"> <![endif]-->
    <!--[if (gt IE 9)|!(IE)]><!--> <html lang="fr-FR" class="no-js lang-fr"> <!--<![endif]-->
  {% endblock %}

  {% set bust = "?" ~ (app.env != 'prod' ? "now"|date("U") : "0") %}

  {% block head %}
    <head>
      {% block head_metadata %}
        <meta charset="utf-8">
        <title>{% block page_title %}{{ page_title|default(app.config.meta.title)|default('Zee Agency') }}{% endblock %}</title>
        <meta name="title" content="{{ block('page_title') }}">
        <meta name="description" content="{{ app.config.meta.description }}">
        <meta name="author" content="{{ app.config.meta.author }}">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <meta name="HandheldFriendly" content="True">
        <meta http-equiv="cleartype" content="on">
        <meta name="msapplication-TileColor" content="#ffffff">
        <link rel="icon" href="{{ assets_dir }}/img/favicon.ico" />
        <meta property="og:title" content="{{ block('page_title') }}" />
        <meta property="og:description" content="{{ app.config.og.description|default(app.config.meta.description) }}" />
        <meta property="og:image" content="{{ app.request.getSchemeAndHttpHost() ~ assets_dir }}/img/facebook-og.jpg" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
      {% endblock %}

      {% block stylesheet %}
      {% endblock %}

      {% block head_scripts %}
      {% endblock %}
    </head>
  {% endblock %}

  <body>
  {% block body %}
    {{ body|default("Zee Silex Kit")|raw }}
  {% endblock %}

  {% block scripts %}
    <script>
      console.log('Coucou !');
    </script>
  {% block google_analytics %}
    {% if app.env != 'dev' %}
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', '', 'auto'); {# TODO #}
      ga('send', 'pageview');
    </script>
    {% endif %}
  {% endblock %}
  {% endblock %}
  </body>
  </html>
{% endblock %}
